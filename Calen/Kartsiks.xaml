<UserControl x:Class="Calen.Kartsiks"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Calen"
      mc:Ignorable="d" 
      Height="70"
      Width="70"
      BorderBrush="Black"
      BorderThickness="1"
      Margin="5"
      Background="Gainsboro">

    <Grid>
        <Image x:Name="ItemImage" Source="Resources/tritochki.png"  VerticalAlignment="Top" Stretch="Fill" MaxHeight="50" MaxWidth="99" Margin="0,20,0,0" />

        <TextBlock x:Name="DayBlock" Height="20" VerticalAlignment="Top" TextAlignment="Center" FontSize="12" />
    </Grid>
</UserControl>

   
